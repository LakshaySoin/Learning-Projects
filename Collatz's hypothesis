c0 = int(input("Enter a non-negative and non-zero integer: "))
steps = 0
condition = True
while condition == True:
   if c0 != 1:
       steps += 1
       if c0 % 2 == 0:
           c0 = c0 // 2
           print(c0)
       else:
           c0 = 3 * c0 + 1
           print(c0)
   else:
       condition = False
       print("steps =", steps)
